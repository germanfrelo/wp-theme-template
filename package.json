	"keywords": [],
	"homepage": "themerepourl",
	"repository": {
		"type": "git",
		"url": "git+themerepourl.git"
	},
	"bugs": "themerepourl/issues",
	"type": "module",
	"private": true,
	"main": "",
	"devDependencies": {
		"@prettier/plugin-php": "0.24.0",
		"concurrently": "9.2.1",
		"markdownlint-cli2": "0.19.1",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-custom-media": "11.0.6",
		"postcss-discard-comments": "7.0.5",
		"postcss-import": "16.1.1",
		"postcss-import-ext-glob": "2.1.1",
		"postcss-nesting": "13.0.2",
		"postcss-url": "10.1.3",
		"prettier": "3.6.2",
		"rimraf": "6.1.2",
		"stylelint": "16.26.0",
		"stylelint-config-recess-order": "7.4.0",
		"stylelint-config-standard": "39.0.1",
		"stylelint-order": "7.0.1",
		"svgo": "4.0.0"
	},
	"scripts": {
		"build": "npm run clean:build && npm run build:css && npm run build:svg",
		"build:css": "rimraf dist/css && npm run postcss:editor && npm run postcss:theme",
		"build:svg": "svgo --folder src/svg --output dist/svg",
		"clean:build": "rimraf dist && mkdir dist",
		"clean:build:css": "rimraf dist/css",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "npm run lint:css",
		"lint:css": "stylelint --formatter verbose \"**/*.css\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:md": "markdownlint-cli2",
		"lint:md:fix": "npm run lint:md -- --fix",
		"postcss:editor": "postcss src/css/editor.css -o dist/css/editor.css",
		"postcss:theme": "postcss src/css/index.css -o dist/css/theme.css",
		"start": "npm run build:css && npm run build:svg && npm run watch:css",
		"watch:css": "concurrently \"npm run postcss:editor -- --watch\" \"npm run postcss:theme -- --watch\""
	}
}
