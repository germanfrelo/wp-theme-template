{
	"name": "themeslug",
	"version": "0.1.0",
	"description": "themedescription",
	"author": "themeauthor",
	"license": "GPL-2.0-or-later",
	"keywords": [],
	"homepage": "themerepourl",
	"repository": {
		"type": "git",
		"url": "git+themerepourl.git"
	},
	"bugs": "themerepourl/issues",
	"type": "module",
	"private": true,
	"main": "",
	"packageManager": "pnpm@9.4.0",
	"devDependencies": {
		"concurrently": "9.2.1",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-custom-media": "11.0.6",
		"postcss-discard-comments": "7.0.4",
		"postcss-import": "16.1.1",
		"postcss-import-ext-glob": "2.1.1",
		"postcss-nesting": "13.0.2",
		"prettier": "3.6.2",
		"rimraf": "6.0.1",
		"stylelint": "16.25.0",
		"stylelint-config-recess-order": "7.4.0",
		"stylelint-config-standard": "39.0.1",
		"stylelint-order": "7.0.0",
		"svgo": "4.0.0"
	},
	"scripts": {
		"build": "pnpm run clean:build && pnpm run build:css && pnpm run format:svg",
		"build:css": "pnpm run clean:build:css && pnpm run postcss:run",
		"clean:build": "rimraf build && mkdir build",
		"clean:build:css": "rimraf build/css",
		"format": "prettier --write . && pnpm run format:svg",
		"format:check": "prettier --check .",
		"format:svg": "svgo --folder assets/svg",
		"lint": "pnpm run lint:css",
		"lint:css": "stylelint --formatter verbose \"**/*.css\"",
		"lint:css:fix": "pnpm run lint:css -- --fix",
		"postcss:run": "postcss src/css/theme.css --dir build/css",
		"start": "pnpm run build:css && concurrently \"pnpm:watch:*\"",
		"watch:css": "pnpm run postcss:run -- --watch"
	}
}
