{
	"name": "themeslug",
	"version": "0.2.0",
	"description": "themedescription",
	"author": "themeauthor",
	"license": "GPL-2.0-or-later",
	"keywords": [],
	"homepage": "themerepourl",
	"repository": {
		"type": "git",
		"url": "git+themerepourl.git"
	},
	"bugs": "themerepourl/issues",
	"type": "module",
	"private": true,
	"main": "",
	"devDependencies": {
		"concurrently": "9.2.1",
		"husky": "9.1.7",
		"lint-staged": "16.1.6",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-custom-media": "11.0.6",
		"postcss-discard-comments": "7.0.4",
		"postcss-import": "16.1.1",
		"postcss-import-ext-glob": "2.1.1",
		"postcss-nesting": "13.0.2",
		"prettier": "3.6.2",
		"rimraf": "6.0.1",
		"stylelint": "16.24.0",
		"stylelint-config-recess-order": "7.3.0",
		"stylelint-config-standard": "39.0.0",
		"stylelint-order": "7.0.0",
		"stylelint-plugin-defensive-css": "1.0.4",
		"svgo": "4.0.0"
	},
	"scripts": {
		"build": "npm run clean-build-css && npm run css && npm run svgo",
		"clean-build-css": "rimraf build/styles && mkdir -p build/styles",
		"css": "postcss src/styles/global.css --dir build/styles",
		"css:watch": "npm run css -- --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "npm run lint:css",
		"lint:css": "stylelint --formatter verbose \"**/*.css\"",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:fix": "npm run lint:css:fix",
		"prepare": "husky",
		"start": "concurrently \"npm run css:watch\"",
		"svgo": "svgo -f assets/svg"
	},
	"lint-staged": {
		"*.css": [
			"stylelint",
			"prettier --write"
		],
		"!(*.css)": [
			"prettier --write --ignore-unknown"
		]
	}
}
